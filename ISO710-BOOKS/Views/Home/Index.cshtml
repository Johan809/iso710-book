@model List<ISO710_BOOKS.Models.LibroModel>

@{
    ViewData["Title"] = "Libros Disponibles";
}

<div class="text-center">
    <h1 class="display-4">Libros Disponibles</h1>
    <hr />
    <div class="row mt-2">
        @foreach (var libro in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex">
                <div class="card h-100 w-100 cursor-pointer">
                    <img src="@libro.PortadaUrl" class="card-img-top img-fluid" alt="Portada de @libro.Titulo" 
                        style="object-fit: cover; height: 200px; width: 100%;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@libro.Titulo</h5>
                        <p class="card-text"><strong>Autor:</strong> @libro.Autor</p>
                        <p class="card-text"><strong>Año:</strong> @libro.AñoPublicacion</p>
                        <a href="#" class="btn btn-primary mt-auto">Ver Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
